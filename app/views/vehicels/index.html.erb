<p id="notice"><%= notice %></p>

<h1>Vehicels</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Surname</th>
      <th>Vehicel brand</th>
      <th>Vehicel model</th>
      <th>Vehicel color</th>
      <th>Plate number</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicels.each do |vehicel| %>
      <tr>
        <td><%= vehicel.First_name %></td>
        <td><%= vehicel.surname %></td>
        <td><%= vehicel.vehicel_brand %></td>
        <td><%= vehicel.vehicel_model %></td>
        <td><%= vehicel.vehicel_color %></td>
        <td><%= vehicel.plate_number %></td>
        <td><%= vehicel.user_id %></td>
        <td><%= link_to 'Show', user_vehicel_path(current_user, vehicel.id) %></td>
        <td><%= link_to 'Edit', edit_user_vehicel_path(current_user, vehicel.id) %></td>
        <td><%= link_to 'Destroy', user_vehicel_path(current_user, vehicel.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicel', new_user_vehicel_path(current_user) %>
